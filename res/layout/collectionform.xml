<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:gravity="center_horizontal"
	android:padding="5dp">
	<TextView android:text="@string/title" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="18dp" />
	<EditText android:id="@+id/title" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<TextView android:text="@string/description"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textSize="18dp" android:layout_marginTop="5dip" />
	<EditText android:id="@+id/description" android:layout_width="fill_parent"
		android:layout_height="100dip" android:gravity="top" />

	<Button android:id="@+id/okbutton" android:layout_width="100dip"
		android:layout_height="wrap_content" android:text="@string/ok"
		android:layout_marginTop="5dip" />

</LinearLayout>
