<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:gravity="center_horizontal" android:padding="5dip">
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:orientation="horizontal">
		<TextView android:text="@string/type_in_delay"
			android:layout_width="wrap_content" android:textSize="18sp"
			android:layout_height="wrap_content"
			android:layout_marginRight="20dip" />
		<EditText android:id="@+id/delay"
			android:layout_width="100dip" android:layout_height="wrap_content" />
	</LinearLayout>
	
	<CheckBox
		android:id="@+id/play_in_test_mode"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/play_in_testing_mode" />
	
	
	<Button android:id="@+id/okbutton" android:layout_width="100dip"
		android:layout_height="wrap_content" android:text="@string/ok" />
</LinearLayout>
